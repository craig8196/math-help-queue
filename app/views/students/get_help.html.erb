<html>
<head>
<script type="text/javascript" src="/assets/javascripts/timer.js">
</script>
</head>
<body onload="setHelpTime(); setInterval('updateTimer()', 1000 )">
  <div class="center">
    <h1 class="blue_white">
      <center>
        <table width="380">
          <tr>
            <td align="center" colspan="2">Request Help</td>
          </tr>
          <tr>
		 	<div colspan=2>
	          <td colspan="1" align="center"><%= render("sessions/student_view_button_b") %></td>
	          <td colspan="1" align="center"><%= render("sessions/logout_button") %></td>
	        </div>
          </tr>
        </table>
      </center>
    </h1>
    <%= flash[:notice] %>
    
    <p class="gray_blue_text">
      You are on the list to be helped.<br><br>
      Your position in the list is:
    </p>
  
    <p class="lightTan_black">
      <%= @all_requests %>
    </p>

    <p class="gray_blue_sub_small">
      <span id="timer">&nbsp;</span>
    </p>
	
	<%= render ("students/cancel_request_button") %><br>
	<%= render ("students/refresh_button") %><br>
    
  </div>
</body>
</html>