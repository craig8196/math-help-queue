<% @page_title = "Edit Privileges" -%>

  <div class="center">
    <h1 class="blue_white">
    <center>
      <table width="380">
        <tr>
          <td align="center" colspan="2">Manage Courses</td>
        </tr>
        <tr>
          <div colspan=2>
	        <td colspan="1" align="center"><%= render("sessions/admin_view_button_b") %></td>
	        <td colspan="1" align="center"><%= render("sessions/logout_button") %></td>
	      </div>
        </tr>
      </table>
    </center>
  </h1>
    <%= flash[:notice] %>
    <p class="gray_blue_text">
	  User Privileges
	</p>
    <div class="lightTan_black_b">
	  <table name="user_permissions" class="center">
	    <th class="center">Username&nbsp&nbsp</th>
	    <th class="center">Administrator&nbsp&nbsp</th>
	    <th class="center">TA&nbsp&nbsp</th>
	    <th class="center">Student</th>
	    
	    <% @all_users.each do |user| %>
	      <% if user.username != @user.username %>
	        <tr>
	          <td><%= user.username %></td>
	          <td><%= check_box_tag 'admin', user.id, user.admin?, :disabled => false, :class => 'edit_admin' %></td>
	          <td><%= check_box_tag 'ta', user.id, user.ta?, :disabled => false, :class => 'edit_ta' %></td>
	          <td><%= check_box_tag 'student', user.id, user.student?, :disabled => true, :class => 'edit_student' %></td>
	          <td><%= content_tag :span, '', :id => "privilege_#{user.id}" %></td>
	        </tr>
	      <% end %>  
	    <% end %>
	  </table>
	</div>
  </div>
