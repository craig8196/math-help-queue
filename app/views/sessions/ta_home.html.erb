<% @page_title = "Home" -%>

<div class="main">
  <div class="center">
    <h1 class="blue_white">Math Help Q</h1>
    <h3 class="blue_white">Teacher's Assistant</h3>
    <%= flash[:notice] %>
    <p class="blue_black_b">
    
      Welcome, <%= @user.username%>!<br><br>
      
      You have the following permissions:<br><br>
      
	  <% @user.privileges.order(id: :asc).each do |p| %>
	  <%= p.privilege_type %><br>
	  <% end %>
	  
	</p>
	
	<h4 class="blue_white">Current Help List</h4>
	<p>
	<% @names.each_with_index do |n, index| %>
	<% if (index % 2) == 0 %>
      <div class="blue_black_bLeft">
	<% else %>
	  <div class="tan_black_bLeft">
    <% end %>	  
	<%= index + 1 %>  &nbsp&nbsp&nbsp<%= n%><br>
	  </div>
	<% end %>
	</p>
	<br>
    <%= render("logout_button") %>
  </div>
</div>
